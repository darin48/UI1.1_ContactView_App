<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"
             android:layout_weight="0"/>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/name_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Name"
                  android:padding="8dp"/>
        <TextView android:id="@+id/name_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/title_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Title"
                  android:padding="8dp"/>
        <TextView android:id="@+id/title_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/phone_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Phone"
                  android:padding="8dp"/>
        <TextView android:id="@+id/phone_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/email_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Email"
                  android:padding="8dp"/>
        <TextView android:id="@+id/email_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/twitterId_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Twitter ID"
                  android:padding="8dp"/>
        <TextView android:id="@+id/twitterId_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>