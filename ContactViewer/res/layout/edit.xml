<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"
             android:layout_weight="0"/>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/name_label"
                  android:layout_width="86dp"
                  android:layout_height="wrap_content"
                  android:text="Name:"
                  android:textStyle="bold"
                  android:padding="8dp"
                  android:paddingRight="0dp"/>
        <EditText android:id="@+id/name_value"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textPersonName"
                  android:text=""
                  android:layout_weight="1"
                  android:hint="<enter in contact name>"
                  android:padding="8dp" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/title_label"
                  android:layout_width="86dp"
                  android:layout_height="wrap_content"
                  android:text="Title:"
                  android:textStyle="bold"
                  android:padding="8dp"/>
        <EditText android:id="@+id/title_value"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:text=""
                  android:layout_weight="1"
                  android:hint="<enter in contact title>"
                  android:padding="8dp" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/phone_label"
                  android:layout_width="86dp"
                  android:layout_height="wrap_content"
                  android:text="Phone:"
                  android:textStyle="bold"
                  android:padding="8dp"
                  android:paddingRight="0dp"/>
        <EditText android:id="@+id/phone_value"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="phone"
                  android:text=""
                  android:layout_weight="1"
                  android:hint="<enter in phone number>"
                  android:padding="8dp" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/email_label"
                  android:layout_width="86dp"
                  android:layout_height="wrap_content"
                  android:text="Email:"
                  android:textStyle="bold"
                  android:padding="8dp"
                  android:paddingRight="0dp"/>
        <EditText android:id="@+id/email_value"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textEmailAddress"
                  android:text=""
                  android:layout_weight="1"
                  android:hint="<enter in email address>"
                  android:padding="8dp" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/twitterId_label"
                  android:layout_width="86dp"
                  android:layout_height="wrap_content"
                  android:text="Twitter ID:"
                  android:textStyle="bold"
                  android:padding="8dp"
                  android:paddingRight="0dp"/>
        <EditText android:id="@+id/twitterId_value"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:text=""
                  android:layout_weight="1"
                  android:hint="<enter in twitter address>"
                  android:padding="8dp" />
    </LinearLayout>
    <Button android:id="@+id/bottom_button"
            style="@style/ToolbarButton"
            android:text="Clear Text"
            android:layout_weight="0">
    </Button>

</LinearLayout>